<Window x:Class="finalProject.Views.ResultDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PCB Defect Inspection" Height="960" Width="1280" WindowStartupLocation="CenterScreen" Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Margin="10,0,10,0" Text="PCB Defect Inspection" Foreground="#EDEFF3" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"/>

        <!-- 필터 바 -->
        <StackPanel Grid.Row="1" Margin="10,0,10,0" VerticalAlignment="Center">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <DatePicker x:Name="FromDate" Width="160"/>
                    <TextBlock Text="→" Foreground="#98A2B3" FontSize="18" Margin="8,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="ToDate" Width="160"/>
                    <ComboBox x:Name="ProductFilter" Width="140" Margin="10,0,0,0">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="short"/>
                        <ComboBoxItem Content="mousebite"/>
                        <ComboBoxItem Content="pin-hole"/>
                        <ComboBoxItem Content="spur"/>
                        <ComboBoxItem Content="open"/>
                        <ComboBoxItem Content="copper"/>
                    </ComboBox>
                </StackPanel>
                <Button x:Name="BtnExport" DockPanel.Dock="Right" Content="Export CSV" Margin="8,0,0,0"
                        Background="#273043" Foreground="#EDEFF3" BorderBrush="#2E3A4D" Width="90" Height="30"/>
                <Button x:Name="BtnCamera" DockPanel.Dock="Right" Content="Vision" Click="BtnCamera_Click" Margin="8,0,0,0"
                        Background="#273043" Foreground="#EDEFF3" BorderBrush="#2E3A4D" Width="90" Height="30"/>
            </DockPanel>
        </StackPanel>

        <!-- KPI -->
        <Grid Grid.Row="2" Margin="5,0,5,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#181B22" Margin="7">
                <GroupBox Header="Total Inspected" Margin="10" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <TextBlock x:Name="TxtTotal" Text="0" Foreground="#EDEFF3" FontSize="42" FontWeight="SemiBold"/>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Background="#181B22" Margin="7">
                <GroupBox Header="Defects (NG)" Margin="10" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <TextBlock x:Name="TxtNg" Text="0" Foreground="#FF6B6B" FontSize="42" FontWeight="SemiBold"/>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Background="#181B22" Margin="7">
                <GroupBox Header="Normal Rate" Margin="10" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <TextBlock x:Name="TxtConf" Text="0" Foreground="#5EE493" FontSize="42" FontWeight="SemiBold"/>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="3" Background="#181B22" Margin="7">
                <GroupBox Header="Defect Rate" Margin="10" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <TextBlock x:Name="TxtRate" Text="0" Foreground="#F0E06E" FontSize="42" FontWeight="SemiBold"/>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- 하단: 그래프 + 표 -->
        <Grid Grid.Row="3" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Defect Rate -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="#181B22" Margin="5" >
                <GroupBox Header="Defect Rate over Time" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <Canvas x:Name="LineChart" Margin="0,8,0,0" Background="#141821">
                        <Line X1="40" Y1="10" X2="40" Y2="230" Stroke="#232A36" StrokeThickness="1"/>
                        <Line X1="40" Y1="230" X2="760" Y2="230" Stroke="#232A36" StrokeThickness="1"/>
                    </Canvas>
                </GroupBox>
            </StackPanel>


            <!-- System Status -->
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="5" Background="#181B22">
                <GroupBox Header="System Status" Margin="7" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <UniformGrid Rows="4" Columns="2" Margin="10">
                        <TextBlock Text="CPU" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock x:Name="TxtCpu" Text="-" Foreground="#EDEFF3" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="Memory" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock x:Name="TxtMem" Text="-" Foreground="#EDEFF3" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="Disk" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock x:Name="TxtDisk" Text="-" Foreground="#EDEFF3" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="Network" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock Text="OK" Foreground="#5EE493" FontSize="16" HorizontalAlignment="Right"/>
                    </UniformGrid>
                </GroupBox>
            </StackPanel>

            <!-- Recent Result -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5" Background="#181B22">
                <GroupBox Margin="7" Header="Recent Results" Foreground="#98A2B3" FontSize="16" BorderThickness="0">
                    <DataGrid x:Name="GridRecent" Grid.Row="1" Margin="0,8,0,0"
          AutoGenerateColumns="True" HeadersVisibility="Column"
          Background="#1E232E" Foreground="#EDEFF3"
          BorderBrush="#222833" HorizontalGridLinesBrush="#222833" VerticalGridLinesBrush="#222833"
          RowBackground="#202735" AlternatingRowBackground="#1E232E"
          IsReadOnly="True" RowHeight="34" FontSize="14">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1D2330"/>
                                <Setter Property="Foreground" Value="#EDEFF3"/>
                                <Setter Property="BorderBrush" Value="#222833"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="#202735"/>
                                <Setter Property="Foreground" Value="#EDEFF3"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#2E3A4D"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </GroupBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4" Margin="10" Background="#181B22">
            <StackPanel Background="#181B22" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pie Chart 1 -->
                    <Viewbox Grid.Column="0" Margin="20">
                        <Canvas x:Name="PieCanvas" Width="200" Height="200"/>
                    </Viewbox>

                    <!-- 범례 1 -->
                    <StackPanel Grid.Column="1" Margin="7" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#3DA5FF" Margin="0,0,8,0"/>
                            <TextBlock Text="short" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#FF6B6B" Margin="0,0,8,0"/>
                            <TextBlock Text="mousebite" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#5EE493" Margin="0,0,8,0"/>
                            <TextBlock Text="pin-hole" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#F0E06E" Margin="0,0,8,0"/>
                            <TextBlock Text="spur" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#D498AD" Margin="0,0,8,0"/>
                            <TextBlock Text="open" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="14" Height="14" Fill="#A6A0D8" Margin="0,0,8,0"/>
                            <TextBlock Text="copper" Foreground="#EDEFF3"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Pie Chart 2 -->
                    <Viewbox Grid.Column="2" Margin="20">
                        <Canvas x:Name="PieCanvas2" Width="200" Height="200"/>
                    </Viewbox>

                    <!-- 범례 2 -->
                    <StackPanel Grid.Column="3" Margin="7" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#3DA5FF" Margin="0,0,8,0"/>
                            <TextBlock Text="1 ~ 2개" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#FF6B6B" Margin="0,0,8,0"/>
                            <TextBlock Text="3 ~ 4개" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#5EE493" Margin="0,0,8,0"/>
                            <TextBlock Text="5 ~ 6개" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="14" Height="14" Fill="#F0E06E" Margin="0,0,8,0"/>
                            <TextBlock Text="7개 이상" Foreground="#EDEFF3"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
