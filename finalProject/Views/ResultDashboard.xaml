<Window x:Class="finalProject.Views.ResultDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PCB Defect Inspection" Height="960" Width="1280" WindowStartupLocation="CenterScreen" Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Margin="12,0" Padding="14"
                Background="#181B22" CornerRadius="14">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <DatePicker x:Name="FromDate" Width="160"/>
                    <TextBlock Text="→" Foreground="#98A2B3" FontSize="18" Margin="8,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="ToDate" Width="160" Margin="8,0,0,0"/>
                    <ComboBox x:Name="ProductFilter" Width="140" Margin="10,0,0,0">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="short"/>
                        <ComboBoxItem Content="mousebite"/>
                        <ComboBoxItem Content="pin-hole"/>
                        <ComboBoxItem Content="spur"/>
                    </ComboBox>
                </StackPanel>
                <Button x:Name="BtnExport" DockPanel.Dock="Right"
                        Content="Export CSV"
                        Padding="16,8" Margin="8,0,0,0"
                        Background="#273043" Foreground="#EDEFF3"
                        BorderBrush="#2E3A4D"/>
                <Button x:Name="BtnCamera" DockPanel.Dock="Right"
                        Content="Vision" Click="BtnCamera_Click"
                        Padding="16,8" Margin="8,0,0,0"
                        Background="#273043" Foreground="#EDEFF3"
                        BorderBrush="#2E3A4D"/>
            </DockPanel>
        </Border>

        <!-- KPI -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <StackPanel>
                    <TextBlock Text="Total Inspected" Foreground="#98A2B3" FontSize="16"/>
                    <TextBlock x:Name="TxtTotal" Text="0" Foreground="#EDEFF3" FontSize="42" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <StackPanel>
                    <TextBlock Text="Defects (NG)" Foreground="#98A2B3" FontSize="16"/>
                    <TextBlock x:Name="TxtNg" Text="0" Foreground="#FF6B6B" FontSize="42" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <StackPanel>
                    <TextBlock Text="Normal Rate" Foreground="#98A2B3" FontSize="16"/>
                    <TextBlock x:Name="TxtConf" Text="0%" Foreground="#5EE493" FontSize="42" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <StackPanel>
                    <TextBlock Text="Defect Rate" Foreground="#98A2B3" FontSize="16"/>
                    <TextBlock x:Name="TxtRate" Text="0%" Foreground="#F0E06E" FontSize="42" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 하단: 그래프 + 표 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Defect Rate -->
            <Border Grid.Row="0" Grid.Column="0" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Defect Rate over Time" Foreground="#98A2B3" FontSize="16"/>
                    <Canvas x:Name="LineChart" Grid.Row="1" Margin="0,8,0,0" Background="#141821">
                        <Line X1="40" Y1="10" X2="40" Y2="230" Stroke="#232A36" StrokeThickness="1"/>
                        <Line X1="40" Y1="230" X2="760" Y2="230" Stroke="#232A36" StrokeThickness="1"/>
                    </Canvas>
                </Grid>
            </Border>

            <!-- System Status -->
            <Border Grid.Row="0" Grid.Column="1" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <StackPanel>
                    <TextBlock Text="System Status" Foreground="#98A2B3" FontSize="16" Margin="0,0,0,8"/>
                    <UniformGrid Rows="4" Columns="2">
                        <TextBlock Text="CPU" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock x:Name="TxtCpu" Text="-" Foreground="#EDEFF3" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="Memory" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock x:Name="TxtMem" Text="-" Foreground="#EDEFF3" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="Disk" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock x:Name="TxtDisk" Text="-" Foreground="#EDEFF3" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="Network" Foreground="#98A2B3" FontSize="16"/>
                        <TextBlock Text="OK" Foreground="#5EE493" FontSize="16" HorizontalAlignment="Right"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Pie -->
            <Border Grid.Row="1" Grid.Column="0" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Defects by Product" Foreground="#98A2B3" FontSize="16"/>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Canvas x:Name="PieCanvas" Margin="0,6,0,0"/>
                    </Grid>

                    <!-- 범례 -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#3DA5FF" Margin="0,0,8,0"/>
                            <TextBlock Text="short" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#FF6B6B" Margin="0,0,8,0"/>
                            <TextBlock Text="mousebite" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="14" Height="14" Fill="#5EE493" Margin="0,0,8,0"/>
                            <TextBlock Text="pin-hole" Foreground="#EDEFF3"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="14" Height="14" Fill="#F0E06E" Margin="0,0,8,0"/>
                            <TextBlock Text="spur" Foreground="#EDEFF3"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Recent Results -->
            <Border Grid.Row="1" Grid.Column="1" Margin="12" Padding="18" CornerRadius="14" Background="#181B22">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Recent Results" Foreground="#98A2B3" FontSize="16"/>
                    <DataGrid x:Name="GridRecent" Grid.Row="1" Margin="0,8,0,0"
                              AutoGenerateColumns="True" HeadersVisibility="Column"
                              Background="#1E232E" Foreground="#EDEFF3"
                              BorderBrush="#222833" HorizontalGridLinesBrush="#222833" VerticalGridLinesBrush="#222833"
                              RowBackground="#202735" AlternatingRowBackground="#1E232E"
                              IsReadOnly="True" RowHeight="34" FontSize="14">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1D2330"/>
                                <Setter Property="Foreground" Value="#EDEFF3"/>
                                <Setter Property="BorderBrush" Value="#222833"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="#202735"/>
                                <Setter Property="Foreground" Value="#EDEFF3"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#2E3A4D"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
