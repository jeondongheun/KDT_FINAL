<Window x:Class="finalProject.Views.FactoryIOControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finalProject.Views"
        mc:Ignorable="d"
        Title="Factory IO Vision Controller" Height="400" Width="650" Background="#1E1E1E"
        WindowStartupLocation="Manual" Top="0" Left="0">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
            <Border Background="#000000" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="3">
                <Image x:Name="CameraFeed" Stretch="Uniform" Margin="10"/>
            </Border>
            <Border x:Name="RoiBorder"
                    BorderBrush="Red"
                    BorderThickness="2"
                    Width="240"  
                    Height="180" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Border Grid.Row="2" Background="#000000" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="5">
                <Image x:Name="BinarizedImageFeed" Stretch="Uniform" Margin="10"/>
            </Border>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="3" Margin="0 20 0 5" Padding="10">
            <ListBox x:Name="TxtLog" Background="Transparent" Foreground="#CCCCCC" FontSize="12" BorderThickness="0"
             ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        </Border>
    </Grid>
</Window>