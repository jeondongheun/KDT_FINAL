<Window x:Class="Camera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Camera"
        mc:Ignorable="d"
        Title="MainWindow" Height="960" Width="1280" Background="#F3F4F6"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        
        <!-- 카메라 화면 -->
        <Border Grid.Row="0" CornerRadius="5" Background="#1C2230" Margin="10">
            <Border BorderThickness="2" BorderBrush="SteelBlue" CornerRadius="4" Margin="15">
                <Grid>
                    <Image x:Name="imgCamera" Stretch="UniformToFill"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Ellipse x:Name="liveDot" Width="10" Height="10" Fill="Green" Margin="10 12 0 10">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.1" Duration="0:0:0.5" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <TextBlock x:Name="txtLive" Text="LIVE" Margin="7" Width="30" Height="20" FontSize="15" Foreground="White"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <mui:ProgressRing x:Name="progressRing" IsActive="True" Width="50" Height="50" Foreground="White" Margin="13"/>
                        <TextBlock x:Name="camera" Text="카메라 준비 중..." FontSize="25" FontWeight="SemiBold" Foreground="White" TextAlignment="Center"/>
                        <TextBlock x:Name="txtCam" Text="카메라 앞에 바로 서 주세요." FontSize="16" Foreground="LightGray" TextAlignment="Center" Margin="5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>


        <!-- 안전 장비 착용 여부 판별 -->
        <UniformGrid Grid.Row="1" Columns="3">
            <Border x:Name="borderH" Height="70" Background="#F0F5FF" Margin="10 3 3 3" CornerRadius="5" BorderThickness="1" BorderBrush="#E5E7EB">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <mui:ProgressRing x:Name="progHelmet" IsActive="True" Width="25" Height="25" Foreground="SteelBlue" Margin="13"/>
                    <fa:ImageAwesome Icon="CheckCircle" x:Name="checkH" Margin="13" Width="20" Height="20" Foreground="#10B981"/>
                    <fa:ImageAwesome Icon="ExclamationTriangle" x:Name="warnH" Margin="13" Width="20" Height="20" Foreground="#F59E0B"/>
                    <TextBlock x:Name="helmets" Text="안전모" VerticalAlignment="Center" TextAlignment="Center" FontSize="17" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border x:Name="borderV" Height="70" Background="#F0F5FF" Margin="7" CornerRadius="5" BorderThickness="1" BorderBrush="#E5E7EB">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <mui:ProgressRing x:Name="progVest" IsActive="True" Width="25" Height="25" Foreground="SteelBlue" Margin="13"/>
                    <fa:ImageAwesome Icon="CheckCircle" x:Name="checkV" Margin="13" Width="20" Height="20" Foreground="#10B981"/>
                    <fa:ImageAwesome Icon="ExclamationTriangle" x:Name="warnV" Margin="13" Width="20" Height="20" Foreground="#F59E0B"/>
                    <TextBlock x:Name="vest" Text="안전 조끼" VerticalAlignment="Center" TextAlignment="Center" FontSize="17" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border x:Name="borderG" Height="70" Background="#F0F5FF" Margin="7" CornerRadius="5" BorderThickness="1" BorderBrush="#E5E7EB">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <mui:ProgressRing x:Name="progGloves" IsActive="True" Width="25" Height="25" Foreground="SteelBlue" Margin="13"/>
                    <fa:ImageAwesome Icon="CheckCircle" x:Name="checkG" Margin="13" Width="20" Height="20" Foreground="#10B981"/>
                    <fa:ImageAwesome Icon="ExclamationTriangle" x:Name="warnG" Margin="13" Width="20" Height="20" Foreground="#F59E0B"/>
                    <TextBlock x:Name="gloves" Text="안전 장갑" VerticalAlignment="Center" TextAlignment="Center" FontSize="17" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</Window>
